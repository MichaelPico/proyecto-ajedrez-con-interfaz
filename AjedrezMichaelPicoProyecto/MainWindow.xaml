<Window x:Class="AjedrezMichaelPicoProyecto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AjedrezMichaelPicoProyecto"
        mc:Ignorable="d"
        Title="Ajedrez Con Interfaz - By Michael Pico" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="BotonContinuarJuego" IsEnabled="False" Content="Continuar Juego" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Click="BotonContinuarJuego_Click"></Button>
        <Button x:Name="BotonNuevoJuego" Content="Nuevo Juego" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" Click="BotonNuevoJuego_Click"></Button>
        <Button x:Name="BotonOpciones" Content="Opciones" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,120,0,0" Click="BotonOpciones_Click"></Button>
        <Button x:Name="BotonSalir" Content="Salir" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,180,0,0" Click="BotonSalir_Click"></Button>
    </Grid>
</Window>